<nav id="top-nav" class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <% if (config.root !== '/' || site.pages.length > 0 || config.language.length > 2) { %>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-menu-navbar" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      <% } %>
      <a class="navbar-brand" href="<%- config.root %><%= page.lang === config.language['0'] ? '' : page.lang + '/' %>"><% if (theme.navbar_brand){ %><%- theme.navbar_brand %><% } else { %><%= config.title %><% } %></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <% if (config.root !== '/' || site.pages.length > 0 || config.language.length > 2) { %>
      <div class="collapse navbar-collapse" id="main-menu-navbar">
        <ul class="nav navbar-nav navbar-right">
          <% if (config.root !== '/'){ %>
            <li class="<%= path.indexOf(config.root + '/') !== -1 ? 'active' : '' %>">
              <% if (page.lang === config.language['0']){ %>
                <a href="<%- url_for(config.index_generator.path) %>">config.root</a>
              <% } else { %>
                <a href="<%- url_for(page.lang + '/' + config.index_generator.path) %>">config.root</a>
              <% } %>
            <% } %>
          </li>
          <% site.pages.forEach(function(p){ %>
            <% if (p.in_nav && p.lang === page.lang){ %>
              <li class="<%= is_current(p.path) ? 'active' : '' %>">
                <a class="<%= is_current(p.path) ? 'active' : '' %>"
                   href="<%- url_for(p.path) %>"><%= p.title %></a></li>
             <% } %>
          <% }); %>
          <% if (config.language !== null && config.language.length > 2){ %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= page.lang %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <% for (var i in config.language){ %>
                  <% if(page.lang !== config.language[i] && config.language[i] !== 'default'){ %>
                  <%# assumed that default language is at root, not at '/{:lang}/' %>
                    <li><a href="<%= i === '0' ? config.root : '/' + config.language[i] + '/' %>"><%= config.language[i] %></a></li>
                  <% } %>
                <% } %>
              </ul>
            </li>
          <% } %>
          <!--
            <% if (theme.rss){ %>
              <li><a href="<%- theme.rss %>" title="RSS Feed"><i class="fa fa-rss"></i></a></li>
            <% } %>
          -->
        </ul>
  
      </div><!-- /.navbar-collapse -->
    <% } %>
  </div><!-- /.container-fluid -->
</nav>
